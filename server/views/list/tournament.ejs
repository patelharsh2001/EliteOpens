<%- include ../partials/header.ejs %>
<%- include ../partials/main_nav.ejs %>    
<%- include ../partials/bottom_nav.ejs %>  
<%- include ../partials/footer.ejs %>  




  <!-- Main Content -->
  <main class="container">
    <div class="row">
        <div class="offset-md-1 col-md-11">
            <h1><%= title %></h1>

                <a href="/tournament-list/add" class="btn btn-primary" role="button">
                <i class="fas fa-plus-circle"></i> Add a Tournament</a>
            
            <br>
            <table class="table table-bordered table-striped table-hover">
                <!-- Header Row-->
                <tr class="d-flex">
                        <th class="text-center col-2">Name</th>
                        <th class="text-center col-2">Start Date</th>
                        <th class="text-center col-2">Location</th>
                        <th class="text-center col-2">Entry Fee</th>
                        <th class="text-center col-2">Status</th>
                        <th class="text-center col-1"></th>
                        <th class="text-center col-1"></th>
                       
              
                </tr>

                <!-- Repeatable Template Row -->

                <% for(let count = 0; count < TournamentList.length; count++) { %>
                    <tr class="d-flex">
                            <td class="text-center col-2"><%= TournamentList[count].name %></td>
                            <td class="text-center col-2"><%= TournamentList[count].startdate %></td>
                            <td class="text-center col-2"><%= TournamentList[count].location %></td>
                            <td class="text-center col-2"><%= TournamentList[count].entryfee %></td>
                            <td class="text-center col-2"><%= TournamentList[count].status %></td>
                                        
                            <td class="text-center col-1">
                                <a href="/tournament-list/edit/<%= TournamentList[count]._id %>" class="btn btn-primary btn-sm">
                                <i class="fas fa-pencil-alt"></i> Edit</a>
                            </td>
                            <td class="text-center col-1">
                                <a href="/tournament-list/delete/<%= TournamentList[count]._id %>" class="btn btn-danger btn-sm">
                                <i class="fas fa-trash-alt"></i> Delete</a>
                            </td>
                            
                             
                         
                    </tr>
                    <%} %>

            </table>
        </div>
    </div>

    <div class="card" style="width: 20rem;">
        <img src="/Images/courtlayout.png" class="card-img-top" alt="...">
        <div class="card-body">
          <p class="card-text">Please refer to the court layout to find your game</p>
        </div>
      </div>

  </main>






