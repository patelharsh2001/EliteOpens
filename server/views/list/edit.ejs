<%- include ../partials/header.ejs %>
<%- include ../partials/main_nav.ejs %>    
<%- include ../partials/bottom_nav.ejs %>  
<%- include ../partials/footer.ejs %>  

<main class="container">
<div class="row">
    <h1><%= title%></h1>

    <form class="form" method="POST">
        <div class="form-group">
          <label for="nameTextField">Name</label>
          <input type="text" class="form-control" 
          id="nameTextField"  placeholder="Enter Your Name"
          name="name" 
           value="<%= tournament.name %>" 
           required>
        </div>

        <div class="form-group">
          <label for="priceTextField">Start Date</label>
          <input type="text" class="form-control" id="priceTextField"  placeholder="Enter Your Start Date"
          name="startdate" 
          value="<%= tournament.startdate %>" 
          required>
        </div>

        <div class="form-group">
            <label for="locationTextField">Location</label>
            <input type="text" class="form-control" id="locationTextField"  placeholder="Enter Your Location"
            name="location" 
            value="<%= tournament.location %>" 
            required>
          </div>

          <div class="form-group">
            <label for="locationTextField">Entry Fee</label>
            <input type="text" class="form-control" id="feeTextField"  placeholder="Enter Your Entry fee"
            name="entryfee" 
            value="<%= tournament.entryfee %>" 
            required>
          </div>

          <div class="form-group">
            <label for="locationTextField">Status</label>
            <input type="text" class="form-control" id="statusTextField"  placeholder="Enter Your Status"
            name="status" 
            value="<%= tournament.status %>" 
            required>
          </div>
  
        
        
        <button type="submit" class="btn btn-primary">Submit</button>
        <a href="/tournament-list" class="btn btn-warning">Cancel</a>
      </form>

</div>

</main>